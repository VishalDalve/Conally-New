<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.coinally.in">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Bittrex.activities.AuthenticationActivity"
            android:label="@string/authentication" />

        <activity android:name=".Bittrex.activities.MainActivity" />
        <activity
            android:name=".Bittrex.activities.GetBalancesActivity"
            android:label="@string/balances" />
        <activity
            android:name=".Bittrex.activities.GetCurrenciesActivity"
            android:label="@string/currencies" />
    </application>

</manifest>